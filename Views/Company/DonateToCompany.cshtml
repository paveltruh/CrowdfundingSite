@model WebApplication1.ViewModels.CreateDonationViewModel
@{
    ViewData["Title"] = "DonateToCompany";
}

<h1>Пожертвование компании @(Model.CompanyName)</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-companyId="@(Model.CompanyId)"  asp-route-UserId="@(Model.UserId)" asp-route-CompanyName="@(Model.CompanyName)">

            <div class="form-group">
                <label asp-for="AmountOfDonation"></label><br />
                <input asp-for="AmountOfDonation" class="form-control" />
                <span asp-validation-for="AmountOfDonation"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Пожертвовать</button>
            </div>
        </form>
    </div>
</div>

